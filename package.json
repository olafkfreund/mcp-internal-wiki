{
  "name": "mcp-internal-wiki",
  "version": "1.0.0",
  "description": "MCP server for referencing and templating wiki content from multiple URLs.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:client": "node test-client.js",
    "test:interactive": "node test-interactive.js",
    "test:simple": "node simple-test.js",
    "test:query": "node query-test.js",
    "test:all": "npm run test:simple && npm run test:query",
    "setup:vscode": "mkdir -p .vscode && echo '{\"mcp\":{\"servers\":{\"WikiMCP\":{\"type\":\"stdio\",\"command\":\"node\",\"args\":[\"${workspaceFolder}/dist/server.js\"]}}}}' > .vscode/settings.json",
    "setup:config": "[ -f \"./mcp.config.json\" ] || echo '{\"wikiUrls\":[\"https://freundcloud.gitbook.io/devops-examples-from-real-life/\",\"https://wiki.nixos.org/wiki/NixOS_Wiki\"]}' > mcp.config.json",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run setup:config"
  },
  "bin": {
    "mcp-wiki-server": "bin/mcp-wiki-server.js"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE",
    "INSTALLATION.md"
  ],
  "keywords": [
    "mcp",
    "wiki",
    "server",
    "npx",
    "vscode",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "express": "^4.18.2",
    "marked": "^15.0.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
